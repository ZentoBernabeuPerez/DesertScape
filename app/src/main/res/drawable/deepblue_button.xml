<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient android:startColor="@color/db_dark_ocean"
                android:centerColor="@color/db_blue"
                android:endColor="@color/db_light_blue"
                android:angle="45"
                android:centerX="0.75"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="@color/db_blue_white"/>
        </shape>
    </item>
</selector>