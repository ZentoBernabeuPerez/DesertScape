<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <gradient android:startColor="@color/desert_medium_brown"
                android:centerColor="@color/desert_brown"
                android:endColor="@color/desert_yellow"
                android:angle="135"
                android:centerX="0.35"
                android:type="linear"/>
            <stroke
                android:width="2dp"
                android:color="@color/desert_pale"/>
        </shape>
    </item>
</selector>